<% provide(:title, 'ユーザー一覧') %>
<H1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', user %></td>
      <% if logged_in? %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: "退会しますか?" } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New User', signup_path %>